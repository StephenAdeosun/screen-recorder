{
  "manifest_version": 3,
  "name": "Screen Recorder Extension",
  "version": "1.0",
  "description": "Record and share your screen with audio",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
